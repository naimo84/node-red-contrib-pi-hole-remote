{
  "name": "node-red-contrib-pi-hole-remote",
  "version": "0.0.4",
  "description": "NodeRed pi-hole Adapter",
  "author": {
    "name": "naimo84",
    "email": "git@neumann-benjamin.de"
  },
  "contributors": [
    {
      "name": "naimo84",
      "email": "git@neumann-benjamin.de"
    }
  ],
  "homepage": "https://github.com/naimo84/node-red-contrib-pi-hole-remote",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/naimo84/node-red-contrib-pi-hole-remote/blob/master/LICENSE"
    }
  ],
  "keywords": [
    "node-red",
    "pi-hole",
    "Smart Home",
    "home automation"
  ],
  "node-red": {
    "nodes": {
      "pi-hole-config": "dist/pi-hole-config.js",
      "pi-hole-control": "dist/pi-hole-control.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naimo84/node-red-contrib-pi-hole-remote"
  },
  "scripts": {
    "start": "gulp && node-red",
    "test": "mocha \"test/**/*_spec.js\"",
    "release": "gulp && standard-version"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit"
    }
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.0.10",
    "@types/node-red": "^0.20.0",
    "@types/request": "^2.48.2",
    "@types/request-promise": "^4.1.14",
    "gulp": "^4.0.2",
    "commitlint": "^8.1.0",
    "gulp-typescript": "^5.0.1",
    "typescript": "^3.5.2",
    "mocha": "6.2.0",
    "node-red": "0.20.7",
    "node-red-node-test-helper": "^0.2.3",
    "standard-version": "^7.0.0",
    "should": "13.2.3",
    "husky": "3.0.3"
  },
  "commitlint": {
    "format": {
      "helpUrl": "test"
    },
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        72
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}

{
  "name": "node-red-contrib-pi-hole-remote",
  "version": "0.5.0",
  "description": "NodeRed pi-hole Adapter",
  "author": {
    "name": "naimo84",
    "email": "git@neumann-benjamin.de"
  },
  "contributors": [
    {
      "name": "naimo84",
      "email": "git@neumann-benjamin.de"
    }
  ],
  "homepage": "https://github.com/naimo84/node-red-contrib-pi-hole-remote",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/naimo84/node-red-contrib-pi-hole-remote/blob/master/LICENSE"
    }
  ],
  "keywords": [
    "node-red",
    "pi-hole",
    "Smart Home",
    "home automation"
  ],
  "node-red": {
    "nodes": {
      "pi-hole-config": "dist/pi-hole-config.js",
      "pi-hole-control": "dist/pi-hole-control.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naimo84/node-red-contrib-pi-hole-remote"
  },
  "scripts": {
    "start": "gulp && node-red",
    "release-bugfix": "npm run build && standard-version",
    "release": "npm run build && standard-version --release-as minor",
    "dev": "gulp develop",
    "build": "gulp"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit"
    }
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "pi-hole-remote": "^0.1.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.176",
    "@types/node": "^16.11.6",
    "@types/node-red": "^0.20.1",
    "@types/request": "^2.48.7",
    "@types/request-promise": "^4.1.48",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "gulp-watch": "^5.0.1",
    "husky": "7.0.4",
    "mocha": "9.1.3",
    "node-red": "2.1.3",
    "node-red-node-test-helper": "^0.2.7",
    "nodemon": "^2.0.14",
    "should": "13.2.3",
    "standard-version": "^9.3.2",
    "typescript": "^4.4.4"
  },
  "commitlint": {
    "format": {
      "helpUrl": "test"
    },
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        72
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}
